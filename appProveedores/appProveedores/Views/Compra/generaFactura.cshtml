                @Html.Editor("Diracción", new { htmlAttributes = new { @class = "form-control", @Value= @ViewBag.direccion } })
                @Html.ValidationMessage("Diracción", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

