@model IEnumerable<appProveedores.Models.ProductoPedido>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Productos.nombre)
        </th>
        <th> Precio unitario</th>
        <th> Total</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Productos.nombre)
        </td>
        <td>
           $ @Html.DisplayFor(modelItem => item.Productos.precioUnidad)
        </td>
        <td>
           $ @(item.Productos.precioUnidad * item.cantidad)
        </td>
        <td>
            @Html.ActionLink("Quitar Producto", "Quitar", new { id=item.id }) 
        </td>
    </tr>
}

</table>
<a class="btn btn-success" href="/Compra/direccion">Continuar</a>