
@{
    ViewBag.Title = "Checkout";
}

<h2>CheckOut</h2>
@using (Html.BeginForm("ActualizaPedido", "Compra", FormMethod.Post))
{
    <div class="container">
        <div class="col-lg-5">
            <div id="accordion">

                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" name="calle" class="form-control" id="" placeholder="Calle">
                    </div>
                </div>
                <div class="form-inline">
                    <div class="form-group">
                        <div class="col-sm-5">
                            <input type="text" name="numE" class="form-control" id="" placeholder="Número Exterior">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5">
                            <input type="text" name="numI" class="form-control" id="" placeholder="Número Interior">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" name="codigo" class="form-control" id="" placeholder="Código Postal">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" name="colonia" class="form-control" id="" placeholder="Colonia">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" name="estado" class="form-control" id="" placeholder="Ciudad, Estado">
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-5" id="Carrito">
           
        </div>
    </div>
    <input type="submit" class="btn btn-success" />
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    <script type="text/javascript">

        $(document).ready(function () {
            _Carrito();
        });
        function _Carrito() {
            $('#Carrito').empty();
            $('#Carrito').load("/Compra/_Carrito");
        }

    </script>
}
