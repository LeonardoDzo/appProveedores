
@{
    ViewBag.Title = "Pago";
}

<h2>Pago</h2>
<div class="container">
    <div class="col-lg-5">
        <div id="">

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="text" name="nombre" class="form-control" id="" placeholder="Nombre de la Tarjeta">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="number" name="numero" class="form-control" id="" placeholder="Número de la Tarjeta">
                </div>
            </div>
            <div class="form-inline">
                <div class="form-group">
                    <div class="col-sm-5 form-control">
                        <select class="f" name="mes">
                            <option value="1">Enero</option>
                            <option value="2">Febrero</option>
                            <option value="3">Marzo</option>
                            <option value="4">Abril</option>
                            <option value="5">Mayo</option>
                            <option value="6">Junio</option>
                            <option value="7">Julio</option>
                            <option value="8">Agosto</option>
                            <option value="9">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="11">Noviembre</option>
                            <option value="12">Diciembre</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5">
                        <input type="number" class="form-control" name="ano"/>
                    </div>
                </div>
            </div>
          

        </div>
    </div>
    <div class="col-lg-5" id="Pedido">
        
        <div class="section clearfix" id="Carrito">

        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    <script type="text/javascript">

        $(document).ready(function () {
            _Pedido();
            _Carrito();
        });
        function _Carrito() {
            $('#Carrito').empty();
            $('#Carrito').load("/Compra/_Carrito");
        }
        function _Pedido() {
            $('#Pedido').empty();
            $('#Pedido').load("/Compra/_Pedido");
        }

    </script>
}

